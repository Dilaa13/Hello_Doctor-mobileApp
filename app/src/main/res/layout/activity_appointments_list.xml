<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Back Button ImageView -->

    <!-- Logo ImageView -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="38dp"
        android:clickable="true"
        android:contentDescription="Back Button"
        android:focusable="true"
        android:src="@drawable/arrow_back" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="202dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/logotipo_hellodoctor" />

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Appointments"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/Secondary_clr" />

    <!-- Appointments ListView -->
    <ListView
        android:id="@+id/appointmentsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleAppointment"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

</RelativeLayout>